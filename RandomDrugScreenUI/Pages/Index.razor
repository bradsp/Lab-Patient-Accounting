@page "/"
@inject NavigationManager NavigationManager

<PageTitle>Lab Outreach - Home</PageTitle>

<h1>Lab Outreach System</h1>
<p class="lead">Comprehensive laboratory outreach management tools for client services and compliance.</p>

<div class="row mt-5">
    <!-- Random Drug Screen Module -->
    <div class="col-md-6 mb-4">
        <div class="card h-100 border-primary">
   <div class="card-header bg-primary text-white">
    <h4 class="mb-0">
       <span class="oi oi-random"></span> Random Drug Screen
   </h4>
     </div>
     <div class="card-body">
   <p class="card-text">
      Manage candidate lists and perform random selections for drug screening across multiple clients.
      </p>
      <ul class="list-unstyled">
   <li><span class="oi oi-check text-success"></span> Candidate Management</li>
           <li><span class="oi oi-check text-success"></span> Random Selection Tool</li>
     <li><span class="oi oi-check text-success"></span> Bulk Import/Export</li>
      <li><span class="oi oi-check text-success"></span> Compliance Reporting</li>
  </ul>
      <div class="mt-4">
  <a href="/rds/dashboard" class="btn btn-primary">
       <span class="oi oi-dashboard"></span> Go to RDS Dashboard
    </a>
            </div>
            </div>
  <div class="card-footer text-muted">
   <small><span class="oi oi-calendar"></span> Active Module</small>
       </div>
        </div>
    </div>

    <!-- Client Viewer Module -->
    <div class="col-md-6 mb-4">
   <div class="card h-100 border-info">
         <div class="card-header bg-info text-white">
  <h4 class="mb-0">
         <span class="oi oi-briefcase"></span> Client Viewer
   </h4>
       </div>
  <div class="card-body">
  <p class="card-text">
     Search and view client information, including contact details, service agreements, and account status.
       </p>
          <ul class="list-unstyled">
     <li><span class="oi oi-check text-info"></span> Client Search</li>
    <li><span class="oi oi-check text-info"></span> Client Details</li>
    <li><span class="oi oi-info text-secondary"></span> Requisition Forms (Coming Soon)</li>
            <li><span class="oi oi-info text-secondary"></span> Service History (Coming Soon)</li>
      </ul>
       <div class="mt-4">
     <a href="/clients" class="btn btn-info">
        <span class="oi oi-magnifying-glass"></span> Search Clients
  </a>
     </div>
   </div>
   <div class="card-footer text-muted">
    <small><span class="oi oi-wrench"></span> In Development</small>
 </div>
        </div>
    </div>
</div>

<!-- Quick Stats Section -->
<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
       <div class="card-header">
   <h5><span class="oi oi-graph"></span> System Overview</h5>
      </div>
            <div class="card-body">
      <div class="row text-center">
   <div class="col-md-3">
 <div class="border rounded p-3">
     <h3 class="text-primary">2</h3>
     <p class="text-muted mb-0">Active Modules</p>
      </div>
   </div>
     <div class="col-md-3">
      <div class="border rounded p-3">
      <h3 class="text-success">1</h3>
        <p class="text-muted mb-0">Fully Deployed</p>
     </div>
       </div>
   <div class="col-md-3">
     <div class="border rounded p-3">
        <h3 class="text-info">1</h3>
     <p class="text-muted mb-0">In Development</p>
   </div>
            </div>
   <div class="col-md-3">
         <div class="border rounded p-3">
      <h3 class="text-warning">∞</h3>
     <p class="text-muted mb-0">Possibilities</p>
      </div>
            </div>
   </div>
            </div>
        </div>
    </div>
</div>

<!-- Information Section -->
<div class="row mt-4">
    <div class="col-md-12">
 <div class="alert alert-info">
       <h5 class="alert-heading"><span class="oi oi-info"></span> About Lab Outreach</h5>
     <p>
      Lab Outreach is a comprehensive platform designed to streamline laboratory outreach operations. 
         The modular design allows for easy expansion and customization to meet your specific needs.
     </p>
       <hr>
     <p class="mb-0">
       <strong>Current Version:</strong> 1.0.0 | 
      <strong>Last Updated:</strong> @DateTime.Now.ToString("MMMM yyyy")
     </p>
 </div>
    </div>
</div>

@code {
 protected override void OnInitialized()
    {
        // Initialize any required data
    }
}
