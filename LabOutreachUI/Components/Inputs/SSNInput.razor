@using Microsoft.AspNetCore.Components.Forms
@inherits InputBase<string>

<input type="@(ShowLastFourOnly ? "text" : "password")"
       class="form-control @CssClass @(IsInvalid ? "is-invalid" : "")"
       id="@Id"
       placeholder="@Placeholder"
       value="@displayValue"
       @oninput="OnInput"
       @onblur="OnBlur"
       disabled="@Disabled"
       maxlength="11"
       aria-label="@AriaLabel"
       aria-describedby="@(Id)-validation" />

@if (IsInvalid && !string.IsNullOrEmpty(ValidationMessage))
{
    <div id="@(Id)-validation" class="invalid-feedback">
        @ValidationMessage
    </div>
}

@code {
    [Parameter] public string? Placeholder { get; set; } = "###-##-####";
    [Parameter] public string CssClass { get; set; } = "";
    [Parameter] public string? Id { get; set; }
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public string? AriaLabel { get; set; }
    [Parameter] public bool ShowLastFourOnly { get; set; }

    private string displayValue = "";

    protected override void OnInitialized()
    {
        base.OnInitialized();
        if (string.IsNullOrEmpty(Id))
        {
            Id = $"ssn-{Guid.NewGuid():N}";
        }
    }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        displayValue = FormatSSN(Value);
    }

    protected override bool TryParseValueFromString(string? value, out string? result, out string? validationErrorMessage)
    {
        if (string.IsNullOrWhiteSpace(value))
        {
            result = null;
            validationErrorMessage = null;
            return true;
        }

        // Strip all non-digit characters for storage
        var digitsOnly = new string(value.Where(char.IsDigit).ToArray());

        if (digitsOnly.Length == 9)
        {
            result = digitsOnly;
            validationErrorMessage = null;
            return true;
        }

        if (digitsOnly.Length == 0)
        {
            result = null;
            validationErrorMessage = null;
            return true;
        }

        result = digitsOnly;
        validationErrorMessage = "SSN must be 9 digits";
        return false;
    }

    protected override string FormatValueAsString(string? value)
    {
        return FormatSSN(value);
    }

    private string FormatSSN(string? ssn)
    {
        if (string.IsNullOrWhiteSpace(ssn))
        {
            return "";
        }

        // Extract only digits
        var digitsOnly = new string(ssn.Where(char.IsDigit).ToArray());

        if (digitsOnly.Length == 0)
        {
            return "";
        }

        // If ShowLastFourOnly is enabled and we have a full SSN, mask it
        if (ShowLastFourOnly && digitsOnly.Length == 9)
        {
            return $"***-**-{digitsOnly.Substring(5, 4)}";
        }

        // Format as ###-##-####
        if (digitsOnly.Length <= 3)
        {
            return digitsOnly;
        }
        else if (digitsOnly.Length <= 5)
        {
            return $"{digitsOnly.Substring(0, 3)}-{digitsOnly.Substring(3)}";
        }
        else if (digitsOnly.Length <= 9)
        {
            return $"{digitsOnly.Substring(0, 3)}-{digitsOnly.Substring(3, 2)}-{digitsOnly.Substring(5)}";
        }
        else
        {
            // Limit to 9 digits
            return $"{digitsOnly.Substring(0, 3)}-{digitsOnly.Substring(3, 2)}-{digitsOnly.Substring(5, 4)}";
        }
    }

    private void OnInput(ChangeEventArgs e)
    {
        var inputValue = e.Value?.ToString() ?? "";

        // Don't allow editing when ShowLastFourOnly is true and we already have a value
        if (ShowLastFourOnly && !string.IsNullOrEmpty(Value))
        {
            displayValue = FormatSSN(Value);
            return;
        }

        displayValue = FormatSSN(inputValue);
        CurrentValueAsString = inputValue;
    }

    private void OnBlur(FocusEventArgs e)
    {
        displayValue = FormatSSN(Value);
        EditContext?.NotifyFieldChanged(FieldIdentifier);
        StateHasChanged();
    }

    private bool IsInvalid => EditContext?.GetValidationMessages(FieldIdentifier).Any() ?? false;

    private string? ValidationMessage => EditContext?.GetValidationMessages(FieldIdentifier).FirstOrDefault();
}
