@page "/requisition-forms/{ClientMnem}"
@inject NavigationManager NavigationManager

<PageTitle>Requisition Forms - @ClientMnem</PageTitle>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/clients">Client Viewer</a></li>
        <li class="breadcrumb-item active" aria-current="page">Requisition Forms</li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1>Requisition Forms</h1>
        <p class="lead text-muted">
            <span class="badge bg-primary">@ClientMnem</span>
        </p>
    </div>
    <div>
        <a href="/clients" class="btn btn-outline-secondary">
            <span class="oi oi-arrow-left"></span> Back to Client Viewer
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <AddressRequisitionPrint ClientMnemonic="@ClientMnem" />
    </div>
</div>

@code {
    [Parameter]
    public string? ClientMnem { get; set; }
}
